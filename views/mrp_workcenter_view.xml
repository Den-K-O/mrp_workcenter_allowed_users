<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="mrp_workcenter_form_view" model="ir.ui.view">
        <field name="name">mrp.workcenter.form</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='code']"
                position="after"
            >
                <field
                    name="allowed_user_ids"
                    widget="many2many_tags"
                    options="{'no_create_edit': True}"
                />
                <field
                    name="user_editable_time"
                />
            </xpath>
        </field>
    </record>

    <record id="view_mrp_workorder_tree_inherit" model="ir.ui.view">
        <field name="name">mrp.production.work.order.tree.inherit.qty</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_tree_view" />
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="allowed_user_ids" invisible="1"/>
                <field name="user_editable_time" invisible="1"/>
            </field>
            <field name="workcenter_id" position="after">
                <field name="worker"
                    class="worker_main"
                    options="{'no_create': True, 'no_create_edit': True}"
                />
            </field>
            <field name="workcenter_id" position="attributes">
                <attribute name="class" add="mark_as_readonly"/>
            </field>
            <field name="date_planned_start" position="attributes">
                <attribute name="class" add="mark_as_readonly"/>
            </field>
            <field name="date_planned_finished" position="attributes">
                <attribute name="class" add="mark_as_readonly"/>
            </field>
            <field name="duration_expected" position="attributes">
                <attribute name="class" add="restrict_by_workcenter"/>
            </field>
            <field name="duration" position="attributes">
                <attribute name="class" add="restrict_by_workcenter"/>
            </field>

            <xpath
                expr="//field[@name='name' and not(@invisible)]"
                position="attributes"
            >
                <attribute name="class" add="mark_as_readonly"/>
            </xpath>
        </field>
    </record>

</odoo>
